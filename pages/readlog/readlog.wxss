/**app.wxss**/

.readlog-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 文章列表样式 */

.list_container {
  margin: 40rpx;
}

.dec {
  margin-top: 50rpx;
}

.dec-text {
  font-size: 25rpx;
  color: #757575;
}

.log-list {
  display: flex;
  flex-direction: column;
}

.log-items {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.log-cover {
  width: 180rpx;
  height: 140rpx;
  overflow: hidden;
}

.log-cover>image {
  width: 180rpx;
  height: 140rpx;
  display: block;
}

.log-text {
  width: 460rpx;
  font-size: 15px;
  font-weight: 500;
  line-height: 1.8;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.log_tips {
  text-align: center;
  color: #c4c4c4;
  font-size: 15px;
  display: block;
  margin: 0 auto;
}
