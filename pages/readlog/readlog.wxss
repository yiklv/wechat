/**app.wxss**/

.readlog-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  overflow-x: hidden;
}

.userinfo {
  display: flex;
  align-items: center;
  background-color: #fff;
  height: 320rpx;
  padding: 0 40rpx;
}

.userinfo-gravatar {
  width: 148rpx;
  height: 148rpx;
}

.userinfo-gravatar image {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  border-top-left-radius: 0;
  box-shadow: 4px 12px 30px -8px rgba(139, 161, 185, 0.9);
}

.userinfo_text_box {
  color: #333;
  margin-left: 32rpx;
}

.userinfo_nickname_box {
  height: 42rpx;
  overflow: hidden;
}

.userinfo_nickname_box text {
  font-size: 42rpx;
  font-weight: 600;
  line-height: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.userinfo_des_box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.userinfo_des {
  display: block;
  color: #959595;
  font-size: 28rpx;
  line-height: 1;
}

.update_btn_box {
  margin-left: 20rpx;
}

.usertool {
  line-height: 42rpx;
  padding: 0 24rpx 0 16rpx;
  font-size: 24rpx;
  color: #959595;
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  border: 4rpx solid #f5f7f7;
  border-right-color: transparent;
  position: absolute;
  top: 166rpx;
  right: 0;
}

.update_btn_box {
  font-size: 20rpx;
  color: #fff;
}

.update-button {
  line-height: 42rpx;
  background-color: #fff;
  padding: 0 16rpx;
  font-size: 22rpx;
  color: #959595;
  border-radius: 24rpx;
  border: 4rpx solid #f5f7f7;
}

.update-button::after {
  border: none;
}

.top-bar {
  height: 100rpx;
  background: #fff;
  width: 100%;
  z-index: 1;
  box-shadow: 0px 4px 8px #f7f7f7;
  display: flex;
}

.top-bar-item {
  flex: 1;
  display: inline-block;
  background: #fff;
  color: #959595;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}

.top-bar-item-Selected {
  font-weight: bold;
  color: #fd8f45;
  position: relative;
}

.top-bar-item-Selected::after {
  content: "";
  display: block;
  width: 48rpx;
  height: 2px;
  background: #fd8f45;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -24rpx;
}

/* 文章列表样式 */

.list_container {
  margin: 40rpx;
}

.dec {
  margin-top: 50rpx;
}

.dec-text {
  font-size: 25rpx;
  color: #757575;
}

.log-list {
  display: flex;
  flex-direction: column;
}

.log-items {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.log-cover {
  width: 180rpx;
  height: 140rpx;
  overflow: hidden;
}

.log-cover>image {
  width: 180rpx;
  height: 140rpx;
  display: block;
}

.log-text {
  width: 460rpx;
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.log_tips {
  text-align: center;
  color: #c4c4c4;
  font-size: 30rpx;
  display: block;
  margin: 0 auto;
}
