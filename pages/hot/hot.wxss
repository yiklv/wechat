.container {
  margin: 40rpx 0;
}

.list-header {
  padding: 50rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #21759b;
  border-bottom: 2rpx solid #ededed;
  margin-bottom: 40rpx;
}

/*topic list*/

.list-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.list-content-cover {
  width: 240rpx;
  height: 180rpx;
}

.list-content-cover>image {
  width: 240rpx;
  height: 180rpx;
}

.list-content-right {
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-content-title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  line-height: 1.6;
  font-weight: 500;
  color: #333;
}

.list-content-des>text {
  color: #959595;
  margin-right: 24rpx;
  font-size: 24rpx;
  line-height: 1;
}

.top-bar {
  height: 100rpx;
  background: #fff;
  width: 100%;
  z-index: 1;
  box-shadow: 0px 4px 8px #f7f7f7;
  display: flex;
}

.top-bar-item {
  flex: 1;
  display: inline-block;
  background: #fff;
  color: #959595;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}

.top-bar-item-Selected {
  font-weight: bold;
  color: #fd8f45;
  position: relative;
}

.top-bar-item-Selected::after {
  content: "";
  display: block;
  width: 48rpx;
  height: 2px;
  background: #fd8f45;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -24rpx;
}
