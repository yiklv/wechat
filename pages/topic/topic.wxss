/*topic list*/

.topic-common-list {
  padding: 40rpx 40rpx 0;
}

.list-item {
  position: relative;
  overflow: hidden;
  margin-bottom: 60rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 48rpx -16rpx rgba(100, 100, 100, 0.2);
}

.list-item  image.cover {
  width: 100%;
  height: 320rpx;
  display: block;
}

.content-title {
  padding: 24rpx 0 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 0 auto;
}

.content-title text {
  font-size: 32rpx;
  line-height: 1;
  font-weight: 500;
  color: #333;
}

.content-brief {
  width: 90%;
  margin: 0 auto;
  padding: 0rpx 0rpx 30rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #959595;
}

.topic-name {
  /* float: left; */
  width: 55%;
}

.topic-img {
  /* float: right; */
  text-align: right;
}

.topic-img > image {
  width: 108rpx;
  height: 54rpx;
  display: block;
}

.img-menu {
  width: 80rpx;
  height: 40rpx;
  display: inline-block;
  text-align: center;
  border-radius: 12rpx;
}
