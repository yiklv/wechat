@import "../../wxParse/wxParse.wxss";
@import "../../templates/modal-view/modal-view.wxss";

.container {
  padding: 0 40rpx;
  background-color: #fff;
  font-family: Microsoft YaHei, Helvetica, Arial, sans-serif;
}

.container:first-child {
  border-bottom: 20rpx solid #f5f7f7;
}

.content-article-detail {
  margin: 40rpx 0;
}

.entry-title {
  font-size: 48rpx;
  line-height: 1.6;
  font-weight: bold;
  outline: none;
  color: #3a4040;
  margin-bottom: 24rpx;
}

.entry-summary {
  font-size: 32rpx;
  line-height: 64rpx;
  letter-spacing: 1px;
  padding-bottom: 10rpx;
  overflow: hidden;
  overflow-x: hidden;
  position: relative;
}

.detail-read-more {
  width: 100%;
  position: absolute;
  bottom: 0;
}

.detail-readmore-mask {
  height: 384rpx;
  width: 100%;
  box-sizing: border-box;
  background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 80%);
}

.detail-readmore-btn {
  width: 430rpx;
  height: 100rpx;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 1;
  text-align: center;
  color: #fd8f45;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.detail-btn-tip{
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #fd8f45;
}

.detail-readmore-btn::after {
  content: "";
  display: inline-block;
  border: solid #fd8f45;
  border-width: 0 0 2px 2px;
  padding: 3px;
  position: absolute;
  right: 50%;
  bottom: 6rpx;
  transform: translateX(4px) rotate(-45deg);
  opacity: 0.6;
}

.entry-date {
  font-size: 24rpx;
  line-height: 1;
  color: #959595;
  outline: none;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.entry-date image {
  width: 25rpx;
  height: 25rpx;
  margin-left: 24rpx;
}

.entry-icon-text {
  margin-left: 10rpx;
}

/*  comment   */

.commentheader {
  font-size: 28rpx;
  font-weight: 400;
  color: #959595;
}

.commentheader1 {
  padding: 5rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 24rpx;
  line-height: 10rpx;
  color: red;
}

.comment {
  margin: 0 0 60rpx;
}

.comment-children {
  margin-left: 40rpx;
}

/* 评论区用户名 */

.comment-name {
  color: #fd8f45;
  font-weight: 500;
}

.comment-user {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.comment-user-name {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 评论用户头像 */

.comment-user-gravatar {
  position: relative;
}

.gravatarImg {
  border-radius: 16rpx;
  height: 64rpx;
  width: 64rpx;
}

.comment-user-gravatar>image:last-child {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: -5rpx;
  bottom: 3rpx;
  border-radius: 50%;
  border: 1px solid #fff;
}

/* 评论日期颜色 */

.comment-user-name view:last-child {
  color: #959595;
  font-size: 24rpx;
}

.comment-content-bottom {
  background-color: #f9fafb;
  margin-left: 80rpx;
  padding: 0 24rpx;
}

.comment>view.comment-content-bottom:nth-child(3) {
  padding-top: 24rpx;
}

.comment>view.comment-content-bottom:last-child {
  padding-bottom: 24rpx;
}

.replay-user {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

.comment-user image {
  margin-right: 20rpx;
}

.comment-date {
  font-size: 25rpx;
  line-height: 1.2;
  font-weight: normal;
  outline: none;
  margin-bottom: 30rpx;
  color: #959595;
}

.comment-response {
  color: #4c4c4c;
  font-size: 30rpx;
  line-height: 1.8;
  margin-bottom: 50rpx;
}

.comment-summary {
  color: #333;
  font-size: 30rpx;
  line-height: 1.8;
  margin-left: 80rpx;
  margin-bottom: 16rpx;
}

.comment-repaly {
  color: #757575;
  font-size: 30rpx;
  line-height: 1.6rem;
  margin-bottom: 10rpx;
}

.comment-post {
  color: #757575;
  font-size: 30rpx;
  line-height: 1.6rem;
  margin-bottom: 50rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
}

.comment-reply-title {
  font-size: 40rpx;
  line-height: 1.5;
  color: #21759b;
}

.replay-button {
  width: 160rpx;
  display: flex !important;
  flex-direction: column;
  justify-content: center;
  margin-right: 0rpx;
  text-align: center;
  padding: 0px !important;
  font-size: 12px;
  color: #959595;
  background-color: #eee;
  border-radius: 40rpx;
}

.replay-button::after {
  border: none;
}

.textNoEmpty {
  color: red;
}

.more-comment {
  font-size: 30rpx;
  line-height: 1.8rem;
  margin-bottom: 50rpx;
  text-align: center;
  margin-top: 20rpx;
}

/*  comment end  */

.ditail-copyright {
  font-size: 26rpx;
  line-height: 1.2;
  font-weight: normal;
  text-align: center;
  color: #c4c4c4;
  margin-top: 20rpx;
  margin-bottom: 130rpx;
}

.wxParse-a {
  color: #21759b;
}

.wxParse-code {
  padding: 2px 4px !important;
  font-size: 90% !important;
  border-radius: 3px !important;
  color: #eb2226 !important;
  background-color: #f9f2f4 !important;
  font-family: Source Code Pro, Consolas, Menlo, Monaco, Courier New, monospace !important;
}

/* 点个赞 */
.likeBox {
  margin: 80rpx 0;
}

.likeBtn {
  width: 200rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #fd8f45;
  font-weight: 500;
  border: 1px solid #fd8f45;
  border-radius: 32rpx;
  margin: 0 auto;
}

.likeBtn > view {
  display: flex;
  align-items: center;
}

.likeBtn image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}

/* 点赞数 */

.likeNum {
  font-size: 28rpx;
  color: #959595;
  text-align: center;
  margin-top: 48rpx;
}

.likeNum>text {
  display: inline-block;
  position: relative;
}

.likeNum>text::before {
  content: "";
  display: block;
  width: 100rpx;
  height: 1px;
  background: #eee;
  position: absolute;
  left: -120rpx;
  top: 50%;
}

.likeNum>text::after {
  content: "";
  display: block;
  width: 100rpx;
  height: 1px;
  background: #eee;
  position: absolute;
  right: -120rpx;
  top: 50%;
}

/* 点赞头像 */

.likeGravatar {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin: 0 auto;
  margin-left: -20rpx;
  margin-top: 20rpx;
}

.like-user-gravatar {
  position: relative;
  display: inline-block;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  width: 60rpx;
  overflow: visible;
}

.gravatarLikeImg {
  vertical-align: top;
  border-radius: 16rpx;
  height: 60rpx;
  width: 60rpx;
}

.like-user-gravatar > image:last-child {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: -5rpx;
  bottom: 15rpx;
  border-radius: 50%;
  border: 1px solid #fff;
}

/* 文章底部的阅读原文和赞赏 */
.post_bottom_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #959595;
  margin: 30rpx 0 0;
}

.post_bottom_praise {
  display: flex;
  align-items: center;
}

.post_bottom_praise image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
}

/* 上一篇下一篇 */
.pre-next-post {
  font-size: 28rpx;
  line-height: 1.5;
  color: #fff;
  margin: 40rpx 0 0;
}

.pre-next-post image {
  width: 100%;
  height: 180rpx;
  filter: brightness(80%);
  background: #f5f7f7;
}

.pre-post, .next-post {
  width: 100%;
  height: 180rpx;
  position: relative;
  overflow: hidden;
}

.next-post {
  margin-top: 12rpx;
}

.pre-post-title, .next-post-title {
  width: 610rpx;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  z-index: 2;
  margin: 0 30rpx;
}

.pre-post-title>text, .next-post-title>text {
  font-weight: 200;
  font-size: 26rpx;
  line-height: 1;
}

.next-post-title {
  text-align: right;
}

/* 猜你喜欢、评论标题下的横线 */
.subTitle {
  margin: 40rpx 0 20rpx;
  font-size: 30rpx;
  line-height: 1.4;
  font-weight: 500;
  color: #4c4c4c;
  position: relative;
  display: flex;
  justify-content: space-between;
}

.subTitle_line {
  width: 100%;
  height: 1rpx;
  background-color: #e6e6e6;
  margin-bottom: 32rpx;
  position: relative;
  overflow: visible;
}

.subTitle_line::before {
  content: "";
  display: block;
  width: 54rpx;
  height: 4rpx;
  background: #959595;
  position: absolute;
  left: 0;
  top: -2rpx;
}

.subTitle_line_comment {
  margin-bottom: 40rpx;
}

/* 猜你喜欢 */
.relatedPost {
  margin: 20rpx 0;
}

.relatedText {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.relatedText>view {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.8;
  color: #4c4c4c;
  margin-right: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.relatedText image {
  width: 200rpx;
  height: 120rpx;
  display: block;
}


/* 底部Tab栏 */
.comment-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 0 6px rgba(30, 20, 20, 0.1);
  z-index: 100;
}

.comment-box {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-area {
  border: 1px solid #ccc;
  margin-top: 20rpx;
  max-width: 800rpx;
}

.comment-respond {
  padding: 0 40rpx;
  overflow-y: hidden;
}

.comment_input_box {
  width: 520rpx;
  display: flex;
  align-items: center;
}

.comment-input {
  background-color: #f4f6f9;
  padding: 0 24rpx;
  font-size: 14px;
  height: 80rpx;
  flex: 1;
  border-radius: 40rpx;
}

.comment-button {
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  text-align: center;
  font-size: 15px;
  background-color: #fff;
  color: #959595;
  padding: 0;
}

.comment-button::after {
  border: none;
}

.comment_icon_home {
  width: 36rpx;
  height: 36rpx;
}

/* tab栏分享图标 */
.comment_share_btn {
  width: 36rpx;
  height: 36rpx;
  padding: 0;
  margin: 0;
  line-height: 36rpx;
}

.comment_share_btn::after {
  border: none;
}

.comment_icon_share {
  width: 36rpx;
  height: 36rpx;
}

/* 当在后台关闭评论功能时，显示出单独的分享按钮 */
.bottom_share_btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  padding: 0;
  margin: 0;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  line-height: 98rpx;
  background-color: #fff;
  box-shadow: 2px 4px 8px #ccc;
  z-index: 3;
}

.bottom_share_btn::after {
  border: none;
}

.bottom_share_btn image {
  width: 36rpx;
  height: 36rpx;
}

/* 如果是iPhoneX，底部Tab栏增加高度 */
.iphoneX {
  height: 40rpx;
  width: 100%;
}

/* 分享弹出层 */

.share_title {
  text-align: center;
  font-size: 13px;
  color: #959595;
  padding: 40rpx 0;
}

.shareBox {
  display: flex;
}

.shareItem {
  flex: 1;
  font-size: 14px;
  font-weight: 500;
  color: #333;
  line-height: 2;
  text-align: center;
  padding-bottom: 40rpx;
}

.shareItem image {
  width: 60rpx;
  height: 60rpx;
}

.shareBtn {
  background: #fff;
  padding: 0;
  margin: 0;
}

.shareBtn::after {
  border: none;
}
