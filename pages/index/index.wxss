  margin-top: 12rpx;
}

/* 引导添加到我的小程序 */
.addMyMiniapp {
  color: #333;
  line-height: 1.2;
  background: #fff;
  padding: 24rpx 24rpx;
  border-radius: 12rpx;
  position: fixed;
  top: 24rpx;
  right: 24rpx;
  z-index: 999;
  box-shadow: 0 16rpx 30rpx -12rpx rgba(88, 88, 88, 0.2);
}

.addMyMiniapp>view {
  font-size: 30rpx;
  font-weight: 500;
}

.addMyMiniapp>text {
  font-size: 28rpx;
  font-weight: 200;
}

.addMyMiniapp::before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  transform: rotate(45deg);
  position: absolute;
  right: 100rpx;
  top: -10rpx;
}
